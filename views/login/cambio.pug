extends ../layout.pug

block contenido
    h1.text-center.mt-5.upTask SmartList.
    h3.text-center.lead.h1.text-white Restablece tu contraseña de manera sencilla y rápida.
    .container.mt-5
        .row 
            .col-md-6.col-xl-5.col-lg-5.mx-auto 
                form(action="", method="post", class="bg-form p-3 p-mb-5 rounded shadow-sm")
                    h3.text-center.text-white.mb-3.texto  Restablece tu contraseña
                    if(errores)
                       each error in errores
                            div(class=`alert alert-${error.tipo} alert-dismissible fade show`, role='alert')
                                |  #{error.mensaje}.
                                button.btn-close(type='button' data-bs-dismiss='alert' aria-label='Close')
                    .form-floating.mb-3
                        input(type="password", name="password", id="password", class="form-control", placeholder="Ingresa tu contraseña")
                        label(for="correo") Nueva contraseña
                    .form-floating.mb-3
                        input(type="password", name="password2", id="password2", class="form-control", placeholder="Confirma tu contraseña")
                        label(for="correo") Confirma tu nueva contraseña
                    input(type="submit", value="Restablecer", class="btn btn-primary btn-lg btn-block w-100")

                .mt-4.mb-5.d-flex.justify-content-between.px-2
                    a(href="/", class="link-offset-2 link-underline link-underline-opacity-0 link-color") Iniciar sesión  